<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/conversion_gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@color/whiteColor"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="0dp">
        <EditText
            android:id="@+id/firstValue_editText"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:inputType="number|numberDecimal|numberSigned"
            android:numeric="integer|signed|decimal" />
        <Spinner
            android:id="@+id/firstUnit_spinner"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"/>
        <EditText
            android:id="@+id/secondValue_editText"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:inputType="number|numberDecimal|numberSigned" />
        <Spinner
            android:id="@+id/secondUnit_spinner"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
    </GridLayout>


</LinearLayout>
